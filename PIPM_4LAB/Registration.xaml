<Window x:Class="PIPM_4LAB.Registration"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PIPM_4LAB"
        mc:Ignorable="d"
        Title="Registration" Height="300" Width="455" WindowStartupLocation="CenterScreen">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <TextBlock Text="Email:" Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" Margin="0,5"/>
        <TextBox x:Name="EmailTextBox" Grid.Row="0" Grid.Column="1" Width="200" Margin="5"/>

        <TextBlock Text="Пароль:" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" Margin="0,5"/>
        <PasswordBox x:Name="PasswordBox" Grid.Row="1" Grid.Column="1" Width="200" Margin="5"/>

        <TextBlock Text="Подтверждение пароля:" Grid.Row="2" Grid.Column="0" VerticalAlignment="Center" Margin="0,5"/>
        <PasswordBox x:Name="ConfirmPasswordBox" Grid.Row="2" Grid.Column="1" Width="200" Margin="5"/>

        <TextBlock Text="Имя:" Grid.Row="3" Grid.Column="0" VerticalAlignment="Center" Margin="0,5"/>
        <TextBox x:Name="FirstNameTextBox" Grid.Row="3" Grid.Column="1" Width="200" Margin="5"/>

        <TextBlock Text="Фамилия:" Grid.Row="4" Grid.Column="0" VerticalAlignment="Center" Margin="0,5"/>
        <TextBox x:Name="LastNameTextBox" Grid.Row="4" Grid.Column="1" Width="200" Margin="5"/>

        <Button Content="Зарегистрироваться" Grid.Row="5" Grid.ColumnSpan="2" 
            HorizontalAlignment="Center" Width="150" Margin="10" Click="RegisterButton_Click"/>

        <Button Content="Назад" Grid.Row="6" Grid.ColumnSpan="2" 
            HorizontalAlignment="Center" Width="150" Margin="10" Click="Button_Click"/>
    </Grid>
</Window>
