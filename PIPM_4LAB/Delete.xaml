<Window x:Class="PIPM_4LAB.Delete"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PIPM_4LAB"
        mc:Ignorable="d"
        Title="Delete" Height="200" Width="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <TextBlock Text="Введите название товара:" HorizontalAlignment="Center" Margin="0,10,0,5" />

        <TextBox Name="ProductNameTextBox" Grid.Row="1" HorizontalAlignment="Center" Width="250" Height="30" />

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
            <Button Content="Назад" Width="120" Height="40" Click="BackButton_Click" Margin="5" />
            <Button Content="Удалить товар" Width="120" Height="40" Click="DeleteButton_Click" Margin="5" />
        </StackPanel>
    </Grid>
</Window>
