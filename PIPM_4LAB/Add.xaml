<Window x:Class="PIPM_4LAB.Add"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add" Height="400" Width="350" WindowStartupLocation="CenterScreen">
    <Grid>
        <StackPanel Margin="20">
            <Label Content="Название товара" HorizontalAlignment="Left"/>
            <TextBox Name="NameTextBox" Width="300" Margin="0,0,0,10"/>

            <Label Content="Цена товара" HorizontalAlignment="Left"/>
            <TextBox Name="PriceTextBox" Width="300" Margin="0,0,0,10"/>

            <Label Content="Количество товара" HorizontalAlignment="Left"/>
            <TextBox Name="QuantityTextBox" Width="300" Margin="0,0,0,20"/>

            <Label Content="Изображение товара (путь или URL)" HorizontalAlignment="Left"/>
            <TextBox Name="ImageTextBox" Width="300" Margin="0,0,0,20"/>
            <Button Name="BrowseButton" Content="Выбрать изображение" Width="150" Margin="0,0,0,10" Click="BrowseButton_Click"/>

            <Button Name="AddButton" Content="Добавить товар" Width="100" HorizontalAlignment="Center" Click="AddButton_Click"/>
            <Button Name="BackButton" Content="Назад" Width="100" Margin="0,15,0,10" Click="BackButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
