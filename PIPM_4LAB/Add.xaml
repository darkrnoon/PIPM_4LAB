<Window x:Class="PIPM_4LAB.Add"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PIPM_4LAB"
        mc:Ignorable="d"
        Title="Add" Height="400" Width="350">
    <Grid>
        <StackPanel Margin="20">
            <Label Content="Название товара" HorizontalAlignment="Left"/>
            <TextBox Name="NameTextBox" Width="300" Margin="0,0,0,10"/>

            <Label Content="Цена товара" HorizontalAlignment="Left"/>
            <TextBox Name="PriceTextBox" Width="300" Margin="0,0,0,10"/>

            <Label Content="Количество товара" HorizontalAlignment="Left"/>
            <TextBox Name="QuantityTextBox" Width="300" Margin="0,0,0,20"/>

            <!-- Новая строка для выбора изображения -->
            <Label Content="Изображение товара" HorizontalAlignment="Left"/>
            <TextBox Name="ImageTextBox" Width="300" Margin="0,0,0,20"/>
            <Button Name="SelectImageButton" Content="Назад" Width="100" Margin="0,0,0,10" Click="SelectImageButton_Click"/>

            <Button Name="AddButton" Content="Добавить товар" Width="100" HorizontalAlignment="Center" Click="AddButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
